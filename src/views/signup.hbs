<header class="header">
   <div class= "header-logo">
      <img  id="image" src="img/Rectangle 7.1.png" alt="logo">
      <h3 id="h3"><b>HebronDress</b></h3>
      <a id="logout" href="/logouts">logout</a>
   </div>
   <div class= "nav-bar">
      <ul>
         <li><a href="#">Home</a></li>
         <li><a href="#">Dresses</a></li>
         <li><a href="#">Contact</a></li>
         <li><a href="#">MyProfile</a></li>
      </ul>
   </div>
</header>
<div class="outerContainer">
<form action="/signups" method="POST">
   <div class="inputsContainer">
      <input class="inputs" type="text" name="name" value="" placeholder="Type your name..">
      <input class="inputs" type="email" name="email" value="" placeholder="Type your email..">
      {{#if message }} <h1 id="emailMsg"> {{message}} </h1> {{/if}}
      <input class="inputs" type="password" name="password" value="" placeholder="Type a password..">
      <input class="inputs" type="password" name="confirmpassword" value="" placeholder="Type a confirmPassword.." >
      {{#if messagePassword }} <h1 id="passwordMsg"> {{messagePassword}}</h1> {{/if}}
      <input class="inputs" type="number" name="mobile" value="" placeholder="Type a mobile..">
      {{#if messagemobile}} <h1 id="mobileMsg"> {{messagemobile}} </h1> {{/if}}
      <input class="inputs" type="text" name="address" value="" placeholder="Type a address..">
   </div>
   <div class="home-login">
      <input class="inputButtons" type="submit" name="" value="Signup">
</form>
</div>
